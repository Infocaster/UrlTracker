<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <UrlTrackerWebContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\UrlTracker\**\*.*</UrlTrackerWebContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyUrlTrackerWebAssets" BeforeTargets="Build">
        <ItemGroup>
            <UrlTrackerWebContentFiles Include="$(UrlTrackerWebContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying UrlTracker files: $(UrlTrackerWebContentFilesPath) - #@(UrlTrackerWebContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(UrlTrackerWebContentFiles)"
            DestinationFiles="@(UrlTrackerWebContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\UrlTracker\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearUrlTrackerWebAssets" BeforeTargets="Clean">
        <ItemGroup>
            <UrlTrackerWebDir Include="$(MSBuildProjectDirectory)\App_Plugins\UrlTracker\" />
        </ItemGroup>
        <Message Text="Clear old UrlTracker data"  Importance="high" />
        <RemoveDir Directories="@(UrlTrackerWebDir)"  />
    </Target>

</Project>
